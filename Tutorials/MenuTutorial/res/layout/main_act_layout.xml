<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/sMenuActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SimpleMenuActivity"
        android:textSize="40sp" />

    <Button
        android:id="@+id/iconMenuActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icon MenuActivity"
        android:textSize="40sp" />

    <Button
        android:id="@+id/groupMenuActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group MenuActivity"
        android:textSize="40sp" />
    <Button
        android:id="@+id/groupByProgMenuActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group By Prgram MenuActivity"
        android:textSize="40sp" />

</LinearLayout>